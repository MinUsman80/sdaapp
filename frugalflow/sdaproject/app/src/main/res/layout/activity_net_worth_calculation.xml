<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="65dp">

            <TextView
                android:id="@+id/expenseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPENSE"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/incomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INCOME"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/expenseAmtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="17sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/incomeAmtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50,000"
                android:textSize="17sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/netWorthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Net Worth: $0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="29dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/lightgrey">

            <TextView
                android:id="@+id/category_food_drinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food &amp; Drinks"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarFoodDrinks"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/red"
                />

            <TextView
                android:id="@+id/category_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarShopping"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/yellow" />

            <TextView
                android:id="@+id/category_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarMedical"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/blue"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transportation"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarTransportation"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/green"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_debts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debts"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarDebts"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/orange"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_utility_bills"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:text="Utility Bills"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarUtilityBills"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/teal_700"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rent"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarRent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/pink"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarEducation"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/brown"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscription"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarSubscription"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_excursions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excursions"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarExcursions"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/mustard"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/category_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />


            <ProgressBar
                android:id="@+id/progressBarOthers"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/mustard"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
